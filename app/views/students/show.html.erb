<div class="row sign-up-form">
  <div class="col s6 m6">
    <div class="card red lighten-4">
      <div class="card-content black-text">
        <span class="card-title"><%= @student.name %> </span>
        <p> <%= @student.email %></p>
        <p>Course enrollments: none</p>
      </div>
    </div>
    <% if current_user == @student %>
    <%= link_to '<i class="material-icons right">mode_edit</i>
                                                Edit your profile'.html_safe,
                                                edit_student_path(@student),
                                                class:"waves-effect waves-light btn" %>
    <% end %>
  </div>
</div>
